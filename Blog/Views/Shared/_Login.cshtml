@model Blog.Models.AccountViewModel.LoginViewModel

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new Dictionary<string, object> { { "data-toggle", "validator" } }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Please, sign in</h3>
        </div>
        <div class="panel-body">
            <fieldset>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-user"></i>
                        </span>
                        @Html.TextBox("UserName", null, new { @class = "form-control", @placeholder = "Enter login" })
                    </div>
                    @Html.ValidationMessage("UserName")
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-lock"></i>
                        </span>
                        @Html.TextBox("Password", null, new { @class = "form-control", @placeholder = "Enter password", @type = "password" })
                    </div>
                    @Html.ValidationMessage("Password")
                </div>
                @Html.CheckBox("Remember Me", true, new { @name = "RememberMe" })
                @Html.Label("Remember Me", "Remember me")
                <input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
            </fieldset>
        </div>
    </div>
}
