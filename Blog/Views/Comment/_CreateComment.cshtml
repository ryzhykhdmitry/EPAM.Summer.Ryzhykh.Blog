@model Blog.Models.CommentViewModel.CommentViewModel
 
<div class="panel-body">
    @using (Ajax.BeginForm("AddComment", "Comment", new { articleId = ViewBag.ArticleId }, new AjaxOptions
    {
        HttpMethod = "Post",
        UpdateTargetId = "all_comments",
        OnSuccess = "input_clear_comment"
    }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-error" })
        <fieldset>
            <div class="form-group">
                @Html.LabelFor(model => model.Text)

                @Html.TextAreaFor(model => model.Text, new { @class = "form-control", @placeholder = "Your comment" })
                @Html.ValidationMessageFor(model => model.Text)
            </div>
            <div class="form-group">
                <input type="submit" class="button" value="Send" id="send_comment" />
            </div>
</fieldset>
    }
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
